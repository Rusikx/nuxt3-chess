{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-standard-vue",
    "stylelint-config-standard-vue/scss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "ignoreFiles": [
    "coverage"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      "width",
      "height"
    ]
  }
}
